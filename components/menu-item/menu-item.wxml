<!--components/menu-ltem/menu-item.wxml-->
<wxs src="/utils/format.wxs" module="fmt"></wxs>
<view class="menu-item" bindtap="onMenuItemTap">
    <view class="top">
        <image src="{{itemData.coverImgUrl}}" mode="widthFix" class="img"/>
        <view class="count">{{fmt.countFormat(itemData.playCount)}}</view>
    </view>
    <view class="bottom">{{itemData.name}}</view>
</view>
